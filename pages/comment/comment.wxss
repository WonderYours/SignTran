#all {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  background-color: rgb(236, 236, 236);
}

.camera {
  width: 750rpx;
  flex: 2;
}

#chat_frame {
  flex: 3;
  overflow-y: scroll;
}

#chat_area {
  display: flex;
  width: 750rpx;
  height: auto;
  flex-direction: column;
  align-items: flex-end;
}

.colum {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  margin-right: 20rpx;
  margin-top: 50rpx;
  gap: 20rpx
}

.chat_box {
  width: auto;
  max-width: 550rpx;
  background-color: white;
  padding: 20rpx;
  color: black;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  justify-content: center;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.fix {
  position: fixed;
  display: flex;
  flex-direction: red;
  align-content: center;
  width: 750rpx;
  bottom: 20rpx;
  z-index: 100;
}

.fix>van-icon {
  flex: 1;
}