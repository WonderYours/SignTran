#all {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  background-color: rgb(226, 228, 225);
}

.camera {
  width: 750rpx;
  flex: var(--size);
  --size: 2;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

#chat_frame {
  flex: 3;
  overflow-y: scroll;
  overflow-x: hidden;
}

.chat_area {
  display: flex;
  width: 750rpx;
  height: auto;
  flex-direction: column;
  align-items: flex-end;
}

.colum {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  margin-right: 20rpx;
  margin-top: 50rpx;
  gap: 20rpx
}

.chat_box {
  width: auto;
  max-width: 550rpx;
  background-color: rgb(160, 47, 46);
  padding: 20rpx;
  color: white;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  justify-content: center;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.fix {
  position: fixed;
  display: flex;
  flex-direction: red;
  align-content: center;
  width: 750rpx;
  bottom: 0rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  z-index: 100;
  background-color: rgb(226, 228, 225);
  border-top: solid darkred;
}

.fix>van-icon {
  flex: 1;
  color: rgb(72, 12, 11)
}


.record {
  flex: 1;
  display: flex;
  justify-content: center;
  color: red;
}

.record_active {
  flex: 1;
  display: flex;
  justify-content: center;
  color: rgb(160, 47, 46);
}

.placeHolder {
  height: 250rpx;
}